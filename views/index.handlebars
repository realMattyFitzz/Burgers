<div class="container">

	<div class="row">

		<div class="col-md-12">

		</div>

	</div>

	<div class="row">

		<div class="col-md-12">
			<h1 class="text-center text-danger">Eat-Dah-Burger</h1>
		</div>

	</div>

	<div class="row">

		<div class="col-md-5">
			<h3>UneatenBurgers</h3>
			<ul>
				{{#each burgers}}
				{{#unless this.devour}}
				<li>
					<h5>{{this.id}}. {{this.name}}
						<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
							<input type='hidden' name='devour' value='true'>
							<button type='submit' class="btn btn-default">Eat It</button>
						</form>
					</h5>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col-md-2"></div>

		<div class="col-md-5">
			<h3 class="text-muted">EatenBurgers</h3>
			<ul>
				{{#each burgers}}
				{{#if this.devour}}
				<li>
					<h5 class="text-muted">
						{{this.id}}. {{this.name}}
					</h5>
				</li>
				{{/if}}
				{{/each}}
			</ul>
		</div>

	</div>

	<br><br>

	<div class="row">

		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<!-- <label for="bg">Burger Name:</label> -->
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want and click Submit!</h5>
				</div>
			</form>
		</div>

	</div>

</div>